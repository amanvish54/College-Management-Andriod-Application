<?xml version="1.0" encoding="utf-8"?>

<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    tools:openDrawer="end"
    android:background="@drawable/home_background"
    android:layout_height="match_parent"
    android:id="@+id/drawer_menu"
    tools:context=".HomeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/toolbar"
            android:background="@color/colorPrimaryDark"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout


            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ViewFlipper

                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_centerHorizontal="true"
                android:id="@+id/v_flipper"/>
            <LinearLayout

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">
                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="210dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/academic_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"

                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/newsfeed_icon"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="News Feed"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/department_id"

                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:onClick="onClick"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/department"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Department"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/fee_payment_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"

                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/fees_payment"
                                android:padding="10dp"/>
                            <TextView
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Online Fee Payment"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/fests_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:onClick="onClick"

                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/fests"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Fests"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/notice_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"

                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/notices"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Notice"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/student_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:onClick="onClick"
                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/person"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Student"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/visit_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"
                        android:onClick="onClick"

                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/visits"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Visit"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/contact_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:onClick="onClick"

                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/contact"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Contact"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="2"
                    android:gravity="center">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/facilities_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_margin="15dp"

                        android:onClick="onClick"
                        android:layout_weight="1"

                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/facility"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="Facilities"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                        android:id="@+id/about_us_id"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:onClick="onClick"

                        android:layout_margin="15dp"
                        android:layout_weight="1"
                        android:foreground="?attr/selectableItemBackground"
                        android:clickable="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            >
                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/about"
                                android:padding="10dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="bold"
                                android:text="About Us"
                                android:layout_marginTop="10dp"/>

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>


                </LinearLayout>










            </LinearLayout>



        </RelativeLayout>


                
            


        
   



    </ScrollView>
</LinearLayout>


    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/drawer_header"
        app:menu="@menu/drawer_menu"
        />



    
    
        
    </androidx.drawerlayout.widget.DrawerLayout>
   