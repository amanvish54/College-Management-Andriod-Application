<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background_contact"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ContactActivity"
    android:padding="20dp"
    android:gravity="center"
    android:layout_weight="1">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
        app:cardElevation="10dp"
        android:layout_margin="20dp"
     >
        <LinearLayout
            android:onClick="call"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/contact1"
                android:padding="10dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="9399071252"
                android:textColor="#AC0909"
                android:onClick="call"

                android:textSize="30sp"
                style="?attr/borderlessButtonStyle"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/email_btn"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:onClick="sendEmail"
        android:layout_margin="20dp"
        app:cardCornerRadius="5dp"
        android:focusable="true"
       >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/email_icon"
                android:padding="10dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="AMANJ581@GMAIL.COM"
                android:textColor="#AC0909"

                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>



    <androidx.cardview.widget.CardView
        android:id="@+id/visit_btn"
        android:clickable="true"
        android:focusable="true"
        android:onClick="goToVisit"
        app:cardCornerRadius="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="10dp"
        android:layout_margin="20dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center_vertical"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/visits"
                android:padding="10dp"/>
            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Ayodhya Bypass,Bhopal
                 462003"
                android:textColor="#AC0909"

                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                />
        </LinearLayout>

    </androidx.cardview.widget.CardView>












</LinearLayout>
